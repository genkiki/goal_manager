<div class="container">
  <div class="row">
    <div class="col-lg-2 col-sm-12">
    <p><%= link_to "記事一覧", goals_path %></p>
    <p><%= link_to "ランキング", ranking_path %></p>
    </div>
    <div class="col-lg-8 col-sm-12">
      <ul class="goals-list">
        <% @goals.each_with_index do |goal, i| %>
          <li class="goal">
            <div class="ranking-num">
              <h3><%= i + 1 %>位</h3>
            </div>
            <div>
              <%= link_to goal.content, goal_path(goal.id), class: "goal-link goal-title" %>
              <span class="writer">投稿者：<%= goal.user.name %></span><br>
              <span class="tag">タグ：<%=  %> </span> <br>
              <span class="bookmark">ブックマーク数：<%= goal.bookmarks.count %> </span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-lg-2 col-sm-12">
    </div>
  </div>
</div>