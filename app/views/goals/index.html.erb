<div class="container">
  <div class="row">
    <div class="col-lg-2 col-sm-12">
    <p><%= link_to "記事一覧", goals_path %></p>
    <p><%= link_to "ランキング", ranking_path %></p>
    </div>
    <div class="col-lg-8 col-sm-12">
      <%= search_form_for @q do |f| %>
        <%= f.label :content_cont, '内容' %>
        <%= f.search_field :content_cont %>
        <%= f.label :state, '結果' %>
        <%= f.collection_select :result_eq, @states, :id, :state %>
        <%= f.submit class: "btn btn-outline-primary" %>
      <% end %>
      <%= paginate @goals %>
      <%= page_entries_info @goals %>
      <ul class="goals-list">
        <% @goals.each do |goal| %>
          <li class="goal">
            <div>
              <%= link_to goal.content, goal_path(goal.id), class: "goal-link goal-title" %>
              <span class="writer">
                投稿者：
                <%= link_to user_path(goal.user.id) do %>
                <%= goal.user.name %>
                <% end %>
              </span><br>
              <span class="bookmark">ブックマーク数：<%= goal.bookmarks.count %> </span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-lg-2 col-sm-12">
    </div>
  </div>
</div>