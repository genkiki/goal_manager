      <%= link_to followers_user_path(user_id), class: "text-primary" do %>
        <i class="fas fa-hand-holding-heart"></i>
      <% end %>
    </li>
    <% if session[:user_id] == params[:id].to_i %>
      <li>
        <%= link_to favorites_user_path(user_id), class: "text-primary" do %>
          <i class="fas fa-bookmark"></i>
        <% end %>
      </li>
      <li>
        <%= link_to notifications_user_path(user_id), class: "text-primary" do %>
